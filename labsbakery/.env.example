# üßÅ LabsBakery Core - Environment Configuration Example
# Copy this file to .env and update with your settings

# Application
APP_NAME=LabsBakery Core
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./labsbakery.db

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Vagrant/VM Settings
VM_BASE_DIR=/tmp/labsbakery
VAGRANT_PROVIDER=libvirt  # or hyperv for Windows

# Resource Limits
MAX_VMS_PER_LAB=10
DEFAULT_RAM_MB=2048
DEFAULT_CPU_CORES=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/labsbakery.log
